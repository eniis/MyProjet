<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ult.android.se3as3ida.InscriptionActivity"
    android:background="@mipmap/bghh">

    <EditText
        android:id="@+id/edNom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:textColorHint="#616161"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/edPrenom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Prénom"
        android:layout_below="@id/edNom"
        android:textColorHint="#616161"
        android:layout_marginTop="20dp" />


    <EditText
        android:id="@+id/edEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@id/edPrenom"
        android:textColorHint="#616161"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/edPassword"
        android:hint="Mot de passe"
        android:textColorHint="#616161"
        android:layout_below="@+id/edEmail"
        android:layout_marginTop="20dp" />


    <EditText
        android:id="@+id/edTele"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Téléphone"
        android:layout_below="@id/edPassword"
        android:textColorHint="#616161"
        android:layout_marginTop="20dp" />


    <Button
        android:id="@+id/btAnn"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@mipmap/btann"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:singleLine="false" />
    <Button
        android:id="@+id/btReg"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@mipmap/btins"
        android:layout_above="@id/btAnn"
        android:scaleType="fitXY"
        android:layout_marginBottom="10dp"
        android:onClick="userReg"/>

</RelativeLayout>
